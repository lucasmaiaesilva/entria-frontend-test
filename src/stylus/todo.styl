.todo
  font-family: 'Coming Soon', cursive
  margin 20px 0
  background rgb(255, 255, 255)
  width 400px
  border 1px dashed rgb(192, 192, 192)
  padding-left 30px
  &__item
    display flex
    border-left 1px solid rgb(247, 175, 165)
    padding-left 5px
    border-bottom 1px solid silver
    &--task
      flex-grow 1
      font-size 1.1rem
      margin 4px
    &--check
      display flex
      justify-content center
      align-items center
      background rgba(0, 0, 0, 0.15)
      width 34px

.done
  color $disabled-color
  text-decoration line-through

.undone
  color $enabled-color
